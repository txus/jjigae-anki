  "version": "0.2.0",
  "configurations": [
    {
      "preLaunchTask": "package",
      "name": "Anki",
      "type": "python",
      "request": "launch",
      "stopOnEntry": false,
      "pythonPath": "${workspaceRoot}/venv/bin/python", // <- Path to your python binary
      "program": "${workspaceRoot}/anki/runanki", // <- Path to your runanki location
      "cwd": "${workspaceRoot}/anki",
      "debugOptions": ["RedirectOutput"],
      "args": ["-b", "../.anki", "-l", "en"]
    }
  ]
}
